<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <li><%= @user.name %></li>
        <br>
        <li><%= @user.email %></li>
        <br>
      </h1>
      <%= link_to "Compose new Post", new_post_path , class: "btn btn-lg btn-primary" %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3></a> Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
</div>