<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <li><%= @user.name %></li>
        <br>
        <li><%= @user.email %></li>
        <br>
      </h1>
      <%= link_to "Compose new Post", new_post_path , class: "btn btn-lg btn-primary" %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
  <%= link_to "Show Post", post_path , class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>